<Window x:Class="benkyou5_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="社員一覧" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- 上段：DataGrid -->
            <RowDefinition Height="Auto" />
            <!-- 下段：入力欄とボタン -->
        </Grid.RowDefinitions>

        <!-- 社員一覧を表示する表 -->
        <DataGrid x:Name="EmployeeGrid" AutoGenerateColumns="True" Grid.Row="0" />

        <!-- 下に入力欄とボタンを配置 -->
        <StackPanel Orientation="Vertical" Margin="10" Grid.Row="1">
            <TextBox x:Name="NameBox" Text="名前を入力" Margin="5"/>
            <TextBox x:Name="DeptBox" Text="部署を入力" Margin="5"/>
            <DatePicker x:Name="HireDatePicker" Width="150" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="再読込" Click="ReloadButton_Click" Margin="5"/>
                <Button Content="追加" Click="AddButton_Click" Margin="5"/>
                <Button Content="更新" Click="UpdateButton_Click" Margin="5"/>
                <Button Content="削除" Click="DeleteButton_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

